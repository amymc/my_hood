<div class = "form-signin">
<%= form_tag sessions_path do %>
<h2 class="form-signin-heading">Log in!</h2>
  <div class="field">
    <%= label_tag :name%>
    <%= text_field_tag :name %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in", :class => "btn btn-inverse" %></div>
<% end %>
</div>